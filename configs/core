# vim: filetype=gitconfig:
[alias]
	help-configpack       = "!cat `git configpack-installdir`/docs/help.txt 2>/dev/null; true"
	configpack-installdir = "!git config --default=\"`find .git/configpack .git-configpack git-configpack \"$HOME\"/.local/share/git-configpack . -prune 2>/dev/null | head -n1`\" configpack.configpack.installdir"
	configpack-configsdir = "!printf '%s/%s\\n' \"`git configpack-installdir`\" \"$(\"`git configpack-installdir`\"/install.sh --get-property=package.configsdir)\""
	configpack-reconfig   = "!exec \"`git configpack-installdir`\"/install.sh --reconfig"
	configpack-newconfig  = "!_newconfig(){ if [[ ! $1 ]]; then echo 'usage: configpack-newconfig CONFIG_NAME' >&2; exit 1; fi; config_path=`git configpack-configsdir`/$1; if [[ ! -e $config_path ]]; then printf '# %s %s\\n[alias]\\n' 'vim:' 'filetype=gitconfig:' > \"$config_path\" && echo \"$config_path\" && git configpack-reconfig; fi; }; _newconfig"
	configpack-version    = "!exec cat \"`git configpack-installdir`\"/VERSION"
	configpack-init       = "!exec \"`git configpack-installdir`\"/libexec/init.sh"
